  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Cadastro</h1>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
          </div>
          <div>
            <%= f.password_field :password,  placeholder:"Senha", class:"form-control" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation,  placeholder:"Confirmação de Senha", class:"form-control" %>
          </div>
          <div>
            <%= f.submit "Cadastrar-se", class:"btn btn-success submit", style:"float: none; margin-left: 0px; width: 70%;" %>
