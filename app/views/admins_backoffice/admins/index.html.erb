<h1>Listando Administradores</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @admins.each do |admin| %>
                <tr>
                    <td><%= admin.id %></td>
                    <td><%= admin.email %></td>
                    <td style="width:100px">
                        <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %> <!-- no path, ao invÃ©s de 'admin.id', basta por apenas 'admin' que o rails jÃ¡ vai saber que se trata de uma chamada ao id -->
                            <i class="fa fa-edit"></i>
                        <% end %>
                        <button
                            type="button" class="btn btn-danger btn-circle"><i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>